{% extends 'base.html.twig' %}

{% block body %}

    <div>
        <a href="{{ path('ToDoList') }}">Back</a>
    </div>

    <p>
        Description: {{ itemData.description }}
    </p>
    <p>
        Due date: {{ itemData.dueDate | date('d/m/Y')}}
    </p>
    <p>
        Completion: {{ itemData.isDone }}
    </p>
    <div>
        {{ form_start(editForm) }}
        {{ form_widget(editForm) }}
        {{ form_end(editForm) }}
    </div>

{% endblock %}